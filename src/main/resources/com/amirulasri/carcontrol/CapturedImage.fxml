<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="396.0" prefWidth="607.0" spacing="10.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.amirulasri.carcontrol.controller.CapturedImageController">
   <children>
      <MenuBar styleClass="menubar">
         <menus>
            <Menu mnemonicParsing="false" text="File">
               <items>
                  <MenuItem mnemonicParsing="false" onAction="#disconnectAll" text="Disconnect" />
                  <MenuItem mnemonicParsing="false" onAction="#navigateToCameraView" text="Camera View" />
                  <MenuItem mnemonicParsing="false" onAction="#navigateToHomeView" text="Car Control View" />
                  <MenuItem mnemonicParsing="false" onAction="#navigateToCameraView" text="Image Favourite" />
               </items>
            </Menu>
            <Menu mnemonicParsing="false" text="Help">
               <items>
                  <MenuItem mnemonicParsing="false" text="About" />
                  <MenuItem mnemonicParsing="false" onAction="#closeApp" text="Close Application" />
               </items>
            </Menu>
         </menus>
      </MenuBar>
      <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Captured Image">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
         <VBox.margin>
            <Insets left="15.0" top="5.0" />
         </VBox.margin>
      </Text>
      <Label text="View captured image here. Also with ability to save as favourite">
         <VBox.margin>
            <Insets left="15.0" />
         </VBox.margin></Label>
      <TableView fx:id="imagetable" prefHeight="274.0" prefWidth="586.0">
        <columns>
          <TableColumn fx:id="imagecol" prefWidth="251.20001828670502" text="Image" />
          <TableColumn fx:id="namecol" prefWidth="214.39996337890625" text="Name" />
        </columns>
         <VBox.margin>
            <Insets left="10.0" right="10.0" />
         </VBox.margin>
      </TableView>
   </children>
</VBox>
